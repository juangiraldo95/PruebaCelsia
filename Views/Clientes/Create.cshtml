<body>
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="my-3">
                <h1 class="text-center">Crear Cliente</h1>
            </div>
            <div class="card p-2 d-flex justify-content-center">
                <form asp-action="Create" method="post" class="table-responsive">
                    <table class="table table-dark table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Nombres</th>
                                <th scope="col">Numero Identificacion</th>
                                <th scope="col">Direccion</th>
                                <th scope="col">Telefono</th>
                                <th scope="col">Correo Electronico</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="col"><input type="text" name="Nombre" id="Nombre"></td>
                                <td scope="col"><input type="text" name="NumeroIdentificacion" id="NumeroIdentificacion"></td>
                                <td scope="col"><input type="text" name="Direccion" id="Direccion"></td>
                                <td scope="col"><input type="text" name="Telefono" id="Telefono"></td>
                                <td scope="col"><input type="text" name="CorreoElectronico" id="CorreoElectronico"></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a class="btn btn-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Volver</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>